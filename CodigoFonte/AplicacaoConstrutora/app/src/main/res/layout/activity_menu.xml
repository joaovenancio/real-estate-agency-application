<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.MenuActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/menu_ver_ultima_noticia"
            android:layout_width="311dp"
            android:layout_height="93dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:text="Ver última notícia" />

        <Button
            android:id="@+id/menu_ver_imoveis"
            android:layout_width="311dp"
            android:layout_height="93dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="154dp"
            android:text="Ver imóveis" />

        <Button
            android:id="@+id/menu_registrar_noticia"
            android:layout_width="311dp"
            android:layout_height="93dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="259dp"
            android:text="Registrar Notícia" />

        <Button
            android:id="@+id/menu_registrar_imovel"
            android:layout_width="311dp"
            android:layout_height="93dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="369dp"
            android:text="Registrar Imóvel" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>